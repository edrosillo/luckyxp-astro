---
let currentYear= new Date().getFullYear(); 
---

<footer>
    <div class="footer-content">
        <p class="copyright">Copyright &copy; {currentYear} Lucky XP Rights Reserved</p>
        <div id="footer-links">
            <ul>
                <li><a href="/privacypolicy">Privacy Policy</a></li>
                <li><a href="/newstaff">New Staff</a></li>
                <li><a href="/sitemap">Sitemap</a></li>
            </ul>
        </div>
    </div>
</footer>

<style>

footer {
    overflow: hidden;
    background-color: #662D91;
    height: 4rem;
    padding: 1rem;
    bottom: 0;
    z-index: 50;
}

.footer-content {
    max-width: 1200px;
    margin: auto;
    color: #FFF;
    font-size: 1.2rem;
    display: flex;
    justify-content: space-between;
}

footer #footer-links {
    margin-top: -1.3rem;
}

#footer-links ul {
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-end;
    align-items: flex-end;
    list-style: none;
}

#footer-links ul li {
    margin-top: 0.1rem;
}

#footer-links a{
    color: #FFF;
    text-decoration: none;
    font-size: 1rem;
}

@media only screen and (max-width: 800px){
   .footer-content {
       font-size: 1rem;
   }
}

@media only screen and (max-width: 600px){
   .footer-content {
       flex-flow: column;
       align-items: center;
   }

   #footer-links ul {
       flex-flow: row;
       align-items: center;
       justify-content: center;
       padding: 0;
   }

   #footer-links ul li {
       padding: 0 1rem;
       margin: 0;
   }
   

}


</style>