<style>
* {
  padding: 0;
  margin: 0;
}

.card-holder {
    margin: 2rem auto 2rem auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    overflow: hidden;
}

.card {
    max-width: 380px;
    text-align: center;
    margin: 0 0.8rem;
}

.card a {
    text-decoration: none;
}

.card a :hover {
    color: #c0a9d2;
}

.card img{
    width: 100%;
    object-fit: contain;
    border-style: solid;
    border-radius: 3px;
    border-color: #440b70;
}

.card .card-body{
    background: rgb(246,246,246);
    background: linear-gradient(0deg, rgba(246,246,246,1) 0%, rgba(255,255,255,1) 100%);
    padding: 2rem 1rem;
    margin-top: -0.2rem;
    font-size: 1.2rem;
    text-transform: uppercase;
}

@media only screen and (max-width: 800px) {

    .card-holder{
        flex-flow: column wrap;
    }

    .card {
        margin: 1rem 0;
    }

}



@media only screen and (max-width: 775px) {
  .card {
      width: 100%;
  }
}

</style>