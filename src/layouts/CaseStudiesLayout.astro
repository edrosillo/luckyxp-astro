        justify-content: center;
      }

      button {
        background-color: #662d91;
        cursor: pointer;
        color: #ffffff;
        padding: 0.6rem 0;
        font-size: 1.5rem;
        text-align: center;
        border-radius: 10px;
        margin: 2rem 0;
        border: none;
        width: 12rem;
        transition: all 0.3s;
      }

      button {
        cursor: pointer;
        display: inline-block;
        position: relative;
        transition: 0.3s;
      }

      button:after {
        content: "Â»";
        position: absolute;
        opacity: 0;
        top: 0.5rem;
        right: -50px;
        transition: 0.3s;
      }

      button:hover {
        padding-right: 24px;
        padding-left: 8px;
      }

      button:hover:after {
        opacity: 1;
        right: 10px;
      }

      :global(h1) {
        color: #440b70;
        font-size: 2.5rem;
      }

      :global(img) {
        width: auto;
        max-height: 380px;
        height: auto;
        object-fit: contain;
      }

      :global(p) {
        font-size: 1.3rem;
        line-height: 2rem;
      }

      :global(a) {
        text-decoration: none;
        color: #440b70;
      }

      @media only screen and (max-width: 800px) {
        article {
          margin-top: 3rem;
          padding: 0 2rem;
        }

        :global(img) {
          max-width: 90vw;
          max-height: 300px;
        }

        .case-nav {
          height: 7rem;
        }

        .case-options {
          grid-template-columns: repeat(4, 1fr);
