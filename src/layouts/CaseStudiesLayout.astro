---
import MainHead from "../components/MainHead.astro"
import Nav from "../components/Nav/Navbar.svelte"
import Footer from "../components/Footer/Footer.astro"

let {title} = Astro.props;

---

<html lang="en">
	<head>
        <MainHead title={title} />
    <style>
		html,
		body {
		margin: 0;
		padding: 0;
		font-family: Arial, Helvetica, sans-serif;
		scroll-behavior: smooth;
		}

		article {
			min-height:80vh;
			margin: 0 auto;
			max-width: 1160px;
			padding: 0 3rem;
		}

		:global(h1) {
			color: #440b70;
			font-size: 2.5rem;
		}

		:global(img){
			width: auto;
			height: 250px;
		}

		:global(p) {
			font-size: 1.3rem;
			line-height: 2rem;
		}

		@media only screen and (max-width: 800px) {
			article {
				padding: 0 2rem;
			}
  		}

    </style>
	</head>
	<body>
		<Nav></Nav>
		<h1></h1>
		<article>
			<slot />
		</article>
		<Footer></Footer>
	</body>
</html>