---
import MainLayout from '../layouts/MainLayout.astro'
// Component Imports
//import Button from '../components/Button/Button.astro'
//import Nav from '../components/Nav/Navbar.svelte'
import Nav from '../components/Nav/SecondNavbar.svelte'
// You can import components from any supported Framework here!
let title = "Lucky XP Marketing"
---

<style>
html,
body {
  margin: 0;
  padding: 0;
  font-family: Arial, Helvetica, sans-serif;
  scroll-behavior: smooth;
}

.hero{
	position: relative;
	overflow: hidden;
}

.img {
	display: block;
	width: 100%;
	height: auto;
}

.gradient,
.gradient2 {
	background-image: url('/assets/mesh-gradient.jpg');
	background-size: cover;
	pointer-events: none;
	mix-blend-mode: screen;
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 2;
}

.gradient2 {
	mix-blend-mode: multiply;
	background-size: cover;
}

.overlay {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 10;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}


.title {
	font-weight: 900;
	font-size: 6rem;
	opacity: 0.60;
	color: #440b70;
}

.subtitle {
	font-weight: 400;
	font-size: 2.25rem;
	color: #440b70;
	opacity: 0.8;
	margin-top: -4.2rem;
	margin-bottom: 2rem;
}

.button {
	background-color: rgba(68, 11, 112, 0.8);
	color: #FFFFFF;
	padding: 0.6rem 2rem;
	font-size: 1rem;
	border-radius: 10px;
	margin: 0 0.8rem;
	border: none;
}

.desc {
	color: #440b70;
	font-size: 1.5rem;
	margin-top: 2rem;
	opacity: 0.7;
	text-transform: uppercase;
	text-align: center;
}

</style>

<MainLayout title={title}>
	<Nav></Nav>

	<header class="hero">
		<img class="img" width="1600" height="900" src="./assets/LuckyXPHeroImage.jpeg" alt="Lucky XP Street Team at MambaCon">
			<div class="gradient"></div>
			<div class="gradient2"></div>
			<div class="overlay">
				<h1 class="title"> Lucky XP </h1>
				<span class="subtitle"> Marketing and Promotions</span>
				<div>
					<button type="button" class="button">See How</button>
					<button type="button" class="button">Contact Us</button>
				</div>
				<p class="desc">Superior Event Staffing for the <br> Experiential Marketing World since 2002</p>
			</div>
	</header>

</MainLayout>
