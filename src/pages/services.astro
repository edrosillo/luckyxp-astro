<style>
  h1,
  h2,
  a {
    color: #440b70;
  }

  p {
    line-height: 1.6rem;
  }

  .mkg-type {
    max-width: 1160px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  .mkg-type2 {
    max-width: 1160px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
  }

  .mkg-type3 {
    max-width: 1160px;
    margin: 0 auto;
    padding: 1rem 2rem;
  }

  .mkg-type .mkg-img img {
    width: 33rem;
    height: auto;
    margin-right: 4rem;
  }

  .mkg-type2 .mkg-img img {
    width: 33rem;
    height: auto;
    margin-left: 4rem;
  }

  .mkg-desc ul li:before {
    content: "\002D";
    position: absolute;
    margin-left: -20px;
  }

  .mkg-lists ul {
    column-count: 3;
    list-style: none;
  }

  @media only screen and (max-width: 900px) {
    .mkg-type {
      flex-direction: column;
    }

    .mkg-type2 {
      flex-direction: column;
    }

    .mkg-type .mkg-img img {
      width: 90vw;
      height: auto;
      margin-right: 0;
    }

    .mkg-type2 .mkg-img img {
      width: 90vw;
      height: auto;
      margin-left: 0;
    }

    .mkg-lists ul {
      column-count: 1;
    }
  }
</style>
